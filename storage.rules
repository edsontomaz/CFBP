rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDocPath() {
      return /databases/(default)/documents/users/$(request.auth.uid);
    }

    function hasUserDoc() {
      return isSignedIn() && firestore.exists(userDocPath());
    }

    function isAdmin() {
      return hasUserDoc() && firestore.get(userDocPath()).data.role == 'admin';
    }

    function isInGroup(groupId) {
      return hasUserDoc() && (
        (
          firestore.get(userDocPath()).data.grupo is list &&
          firestore.get(userDocPath()).data.grupo.hasAny([groupId])
        ) ||
        (
          firestore.get(userDocPath()).data.grupo is string &&
          firestore.get(userDocPath()).data.grupo == groupId
        )
      );
    }

    function groupCanUpload(groupId) {
      return !firestore.exists(/databases/(default)/documents/groups/$(groupId)) ||
        firestore.get(/databases/(default)/documents/groups/$(groupId)).data.canUpload != false;
    }

    function userCanUploadToGroup(groupId) {
      return hasUserDoc() && (
        !('uploadGroups' in firestore.get(userDocPath()).data) ||
        (
          firestore.get(userDocPath()).data.uploadGroups is list &&
          firestore.get(userDocPath()).data.uploadGroups.hasAny([groupId])
        ) ||
        (
          firestore.get(userDocPath()).data.uploadGroups is string &&
          firestore.get(userDocPath()).data.uploadGroups == groupId
        )
      );
    }

    // Arquivos gravados em: {groupId}/{arquivo}
    match /{groupId}/{allPaths=**} {
      // Leitura pública (necessário para exibir no navegador via URL)
      allow read: if true;

      // Upload permitido para usuários do grupo
      allow create, update: if isSignedIn() && (isAdmin() || (isInGroup(groupId) && groupCanUpload(groupId) && userCanUploadToGroup(groupId)));

      // Apenas admin pode deletar imagens
      allow delete: if isAdmin();
    }
  }
}
